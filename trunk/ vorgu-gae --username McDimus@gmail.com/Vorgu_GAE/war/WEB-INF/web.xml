<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
<!-- Create new group -->
	<servlet>
		<servlet-name>CreateNewGroup</servlet-name>
		<servlet-class>ttu.vorgu2.hw1.ServletCreateGroup</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateNewGroup</servlet-name>
		<url-pattern>/new_group</url-pattern>
	</servlet-mapping>

<!-- Delete group -->
	<servlet>
		<servlet-name>DeleteGroup</servlet-name>
		<servlet-class>ttu.vorgu2.hw1.ServletDeleteGroup</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteGroup</servlet-name>
		<url-pattern>/delete_group</url-pattern>
	</servlet-mapping>
	
<!-- 	Registration -->
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>ttu.vorgu2.hw1.ServletRegister</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

<!-- Delete person -->
	<servlet>
		<servlet-name>DeletePerson</servlet-name>
		<servlet-class>ttu.vorgu2.hw1.ServletDeletePerson</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeletePerson</servlet-name>
		<url-pattern>/delete_person</url-pattern>
	</servlet-mapping>
	
<!-- 	Login -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>ttu.vorgu2.hw1.ServletLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
<!-- 	Join group -->
	<servlet>
		<servlet-name>JoinGroup</servlet-name>
		<servlet-class>ttu.vorgu2.hw1.ServletJoinGroup</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JoinGroup</servlet-name>
		<url-pattern>/join_group</url-pattern>
	</servlet-mapping>
	

<!-- Start page -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
